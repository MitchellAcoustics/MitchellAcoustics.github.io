{
	// "image": "registry.gitlab.com/quarto-forge/docker/quarto_all",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"installTinyTex": true,
			"version": "latest"
		},
		"ghcr.io/va-h/devcontainers-features/uv:1": {}
	},
	"postCreateCommand": "pip install -r requirements.txt; Rscript -e 'renv::restore()'",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"REditorSupport.r"
			]
		}
	}
}